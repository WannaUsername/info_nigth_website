            box-shadow: 
                0 0 30px #3399ff,
                0 0 50px #3399ff,
                inset 0 0 20px rgba(255, 255, 255, 0.4);
        }
        
        /* Terminal effect */
        .terminal-text {
            font-family: 'VT323', monospace;
            font-size: 1.4rem;
            line-height: 1.6;
            border-right: 3px solid var(--retro-green);
            white-space: nowrap;
            overflow: hidden;
