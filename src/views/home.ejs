    <script>
        // Effet Matrix rain rétro
        const canvas = document.getElementById('matrixCanvas');
        const ctx = canvas.getContext('2d');
        
        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();
        
        const chars = "アイウエオカキクケコサシスセソタチツテトナニヌネノハヒフヘホマミムメモヤユヨラリルレロワヲン0123456789$+-*/=%\"'#&_(),.;:?!\\|{}<>[]^~";
        const matrix = chars.split("");
        
        const fontSize = 16;
        let columns = canvas.width / fontSize;
        let drops = Array(Math.floor(columns)).fill(1);
        
        function drawMatrix() {
            // Fond avec effet de traînée rétro
            ctx.fillStyle = 'rgba(10, 10, 18, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Style rétro pour les caractères
            ctx.font = `${fontSize}px 'Press Start 2P', monospace`;
            
            for (let i = 0; i < drops.length; i++) {
                // Caractère aléatoire
                const char = matrix[Math.floor(Math.random() * matrix.length)];
                
                // Effet de dégradé vertical
                const gradient = ctx.createLinearGradient(0, drops[i] * fontSize, 0, drops[i] * fontSize + 30);
                gradient.addColorStop(0, '#00ff41');
                gradient.addColorStop(0.5, '#00b3ff');
                gradient.addColorStop(1, '#ff00ff');
                
                ctx.fillStyle = gradient;
                ctx.fillText(char, i * fontSize, drops[i] * fontSize);
                
                // Réinitialisation avec effet aléatoire
                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                
                drops[i]++;
            }
        }
        
        // Animation loading
        document.querySelector('.loading-screen .bg-green-500').addEventListener('animationend', function() {
            this.style.width = '100%';
        });
        
        // Effets sonores (simulés)
        function toggleSound() {
            const btn = document.querySelector('[onclick="toggleSound()"]');
            const current = btn.textContent.includes('ON');
            btn.textContent = current ? '[ SOUND: OFF ]' : '[ SOUND: ON ]';
            
            // Effet visuel pour simuler le son
            if (!current) {
                document.body.style.animation = 'pixelate 0.3s';
                setTimeout(() => {
                    document.body.style.animation = '';
                }, 300);
            }
        }
        
        // Easter egg
        function easterEgg() {
            const title = document.querySelector('.retro-title');
            title.style.animation = 'glitch 0.5s infinite';
            document.body.style.background = 'radial-gradient(circle, #ff00ff, #00ff41, #00b3ff)';
            
            setTimeout(() => {
                title.style.animation = '';
                document.body.style.background = '';
            }, 3000);
            
            // Message secret
            const secret = document.createElement('div');
            secret.className = 'fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 retro-border p-8 bg-black z-50';
            secret.innerHTML = `
                <div class="text-center">
                    <div class="text-green-400 text-2xl mb-4">EASTER EGG ACTIVATED!</div>
                    <div class="text-white mb-6">THE MATRIX HAS YOU...</div>
                    <button onclick="this.parentElement.parentElement.remove()" class="retro-button px-6 py-3 bg-red-500">
                        [ CLOSE ]
                    </button>
                </div>
            `;
            document.body.appendChild(secret);
        }
        
        // Credits
        function showCredits() {
            const credits = document.createElement('div');
            credits.className = 'fixed top-0 left-0 w-full h-full bg-black/90 flex items-center justify-center z-50';
            credits.innerHTML = `
                <div class="retro-border p-8 max-w-2xl w-full mx-4">
                    <div class="text-center mb-8">
                        <h3 class="text-green-400 text-3xl mb-4">N.I.R.D OS CREDITS</h3>
                        <div class="space-y-4 text-left text-white">
                            <div class="flex justify-between">
                                <span>SYSTEM DESIGN:</span>
                                <span class="text-green-400">NIRD TEAM</span>
